@model IEnumerable<NIDCWA.Models.UserBasicViewModel>
@{
    ViewBag.Title = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section NavBarActive {
    <li><a href="#">Home</a></li>
    <li class="dropdown active">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configuration <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li class="dropdown-header">User Configuration</li>
            <li class="active">
                @Html.ActionLink("User", "Index", "Users")
            </li>
            <li><a href="#">Role</a></li>
            <li class="divider"></li>
            <li class="dropdown-header">CapTran Configuration</li>
            <li><a href="#">Sub-menu 1</a></li>
            <li><a href="#">Sub-menu 2</a></li>
        </ul>
    </li>
    <li><a href="#about">About</a></li>
}

<h2>Users List</h2>
<hr />
    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink(" ", "Save", "User", null,
                new
                {
                    @class = "btn btn-primary btn-block glyphicon glyphicon-plus",
                    type = "button",
                    role = "button"
                })
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.username)
                    </th>
                    <th class="col-md-2 text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.ID">
                        <td>
                            @Html.DisplayFor(modelItem => item.username)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Save", "User", new { id = item.ID }, null) | Remove
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
