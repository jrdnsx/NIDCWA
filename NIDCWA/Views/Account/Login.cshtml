@model NIDCWA.Models.UserLoginViewModel
@using NIDCWA.Models

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="NEC Indonesia" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>Login</title>
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/logincss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        @using (@Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @class = "form-signin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            
            <center>
                <img id="neclogo" src="../../Images/nec-logo.jpg" alt="NEC Logo" />
            </center>
            <h2 class="form-signin-heading" style="text-align:center">CapTran</h2>
            @Html.TextBoxFor(model => model.username, new { @class = "form-control", placeholder = "username" })
            @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "password" })
            <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
        }
    </div>
</body>
</html>